@import "navigation"

section.main
	width 100%
	height 100%

	div.head
		width 100%
		height 80%
		background url('https://i.cubeupload.com/GepzxL.jpg') no-repeat
		background-attachment fixed
		background-position center center
		background-size cover
		flex-direction column
	
		div.top
			width 100%
			height 50%

			img
				width auto
				height 40%
				-webkit-filter drop-shadow(0px 0px 10px #000)
				filter drop-shadow(0px 0px 10px #000)

		div.bottom
			width 100%
			height 50%
			justify-content space-between
			flex-direction column

			h1
				width 90%
				font-size 60px
				text-align center
				font-family "Oswald"
				letter-spacing 2px
			
			h2
				font-size 30px
				text-align center
				font-family "Oswald"
	
	
	.section
		width 100%
		padding 50px 0

	.welcome
		background #eee
		width 100%
		justify-content space-around
		flex-direction column

		h1
			font-size 50px
			color #333
			padding 20px 0
		
		p
			font-size 23px
			color #444
			padding 20px 0
			width 50%
			line-height 2
			text-align center
	
	.upper-secretariat, .committees, .contact
		height 100%
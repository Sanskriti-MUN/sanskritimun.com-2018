@import "navigation"

section.main
	width 100%
	height 100%

	div.head
		width 100%
		height 80%
		background url('https://i.cubeupload.com/GepzxL.jpg') no-repeat
		background-attachment fixed
		background-position center center
		background-size cover
		flex-direction column
		position fixed
		z-index 1
	
		div.top
			width 100%
			height 50%

			img
				width auto
				height 40%
				-webkit-filter drop-shadow(0px 0px 10px #000)
				filter drop-shadow(0px 0px 10px #000)

		div.bottom
			width 100%
			height 50%
			justify-content space-between
			flex-direction column

			h1
				width 100%
				font-size 80px
				text-align center
				font-family "Oswald"
				letter-spacing 2px
				background rgba(0, 0, 0, 0.3)
			
			h2
				font-size 30px
				text-align center
				font-family "Oswald"
	
	div.content
		width 100%
		height 100%
		position relative
		top 80%
		z-index 2
	
		.welcome
			background #fff
			width 100%

			.wrap
				width 90%
				max-width 768px
				padding 50px 0
				justify-content space-around
				flex-direction column

				h1
					font-size 60px
					color #d68e00
					padding 20px 0
					font-weight 300
				
				p
					font-size 25px
					color #000
					padding 20px 0
					line-height 2
					text-align justify
					letter-spacing 1px
					font-weight 300
		
		.upper-secretariat, .committees, .contact
			height 100%
			background #eee
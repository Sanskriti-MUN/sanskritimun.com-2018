section.main
	height 100%
	width 100%
	background url('https://i.cubeupload.com/GepzxL.jpg') no-repeat
	background-attachment fixed
	background-position center center
	background-size cover
	
	> div
		background #de674361
		position absolute
		display none

		&.right, &.left
			width 20px
			height 100%

		&.top, &.bottom
			width 100%
			height 20px

		&.right
			right 0
		
		&.left
			left 0
		
		&.top
			top 0
		
		&.bottom
			bottom 0
			
	section.content
		width 100%
		height 100%
		flex-direction column
		font-family 'Oswald'
		letter-spacing 2px
		
		div.top
			width 100%
			height 50%

			img
				height 40%
				width auto
				-webkit-filter drop-shadow(0px 0px 10px #000)
				filter drop-shadow(0px 0px 10px #000)

				@media only screen and (max-width: 1000px)
					height 70%

		div.bottom
			width 100%
			height 50%
			justify-content space-between
			flex-direction column

			h1
				width 90%
				font-size 48px
				text-align center

				@media only screen and (max-width: 1000px)
					font-size 40px
			
			h2
				font-size 30px
				text-align center

				@media only screen and (max-width: 1000px)
					font-size 25px
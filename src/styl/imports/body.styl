section.main
	height 100%
	width 100%
	background url('https://i.cubeupload.com/GepzxL.jpg') no-repeat
	background-attachment fixed
	background-position center center
	background-size cover
	
	> div
		background #de674361
		position absolute
		display none

		&.right, &.left
			width 20px
			height 100%

		&.top, &.bottom
			width 100%
			height 20px

		&.right
			right 0
		
		&.left
			left 0
		
		&.top
			top 0
		
		&.bottom
			bottom 0
			
	section.content
		width 100%
		height 100%
		flex-direction column
		font-family 'Oswald'
		letter-spacing 2px
		
		img
			height 28%
			width auto
			-webkit-filter drop-shadow(0px 0px 10px #000)
			filter drop-shadow(0px 0px 10px #000)
			padding 0 0 30px 0
		
		h1
			font-size 48px
		
		h2
			font-size 30px
@import "navigation"

section.wrap
	height 100%
	width 100%
	background #fff

	section.main
		width 90%
		max-width 1000px
		margin 0 auto
		padding 8vh 0

		h1
			font-family "Alegreya Sans"
			font-size 300%
			padding 30px 0 40px 0
			text-align center
			color golden
			font-weight 500
			border-bottom 2px solid
			margin-bottom 20px

			@media only screen and (max-width: 800px)
				font-size 230%
				padding 50px 0 20px 0
				margin-bottom 20px

		h2
			font-weight 500
			font-size 230%
			padding 30px 0
			color golden

			@media only screen and (max-width: 800px)
				font-size 200%
				padding 20px 0 0 0

		p
			width 100%
			font-size 1em
			color #000
			padding 20px 0
			line-height 2
			text-align justify
			letter-spacing 1px
			font-weight 300
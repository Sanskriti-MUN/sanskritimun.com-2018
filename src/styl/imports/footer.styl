section.footer
    width 100%
    padding 50px 0
    flex-direction column
    background #222
    border-top 2px solid golden

    @media only screen and (max-width: 800px)
        padding-bottom 0

    h1
        font-size 230%
        font-weight 500
        color golden
    
    .wrap
        width 100%
        justify-content space-around
        align-items flex-start
        padding 30px 0

        @media only screen and (max-width: 800px)
            flex-direction column
            align-items center

        & > div
            width 300px
            flex-direction column
        
            @media only screen and (max-width: 800px)
                align-items flex-start
                width 85%
                padding 20px 0

            h2
                padding 0 0 20px 0

            p
                font-size 18px
                color #ddd
                padding 10px 0

            a
                text-decoration none
                color golden
            